<%= form_for @account do |f| %>
  <p>
    <%= label_tag(:email, "Email") %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= label_tag(:name, "Name") %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= label_tag(:balance, "Balance") %>
    <%= f.text_field :balance %>
  </p>
  <p>
    <%= label_tag(:currency, "Currency") %>
    <%= f.text_field :currency %>
  </p>
  <%= f.submit "Save" %>
<% end %>
